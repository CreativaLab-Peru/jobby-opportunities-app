// -----------------------------------------------------
// MongoDB Datasource
// -----------------------------------------------------
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// -----------------------------------------------------
// Embedded Type: SalaryRange
// -----------------------------------------------------
type SalaryRange {
  min Float?
  max Float?
}

// -----------------------------------------------------
// Tag — master dictionary for semantic search
// -----------------------------------------------------
model Tag {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  synonyms  String[]
  category  String?
  createdAt DateTime @default(now())

  @@map("tags")
}

enum OpportunityType {
  INTERNSHIP
  SCHOLARSHIP
  EXCHANGE_PROGRAM
  EMPLOYMENT
  RESEARCH_FELLOWSHIP
  GRADUATE_PROGRAM
  FREELANCE
  FULL_TIME
  PART_TIME
  OTHER
}

// -----------------------------------------------------
// Opportunity — main resource
// -----------------------------------------------------
model Opportunity {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  type         OpportunityType @default(OTHER)
  title        String
  organization String
  url          String?
  description  String?

  // Relación con el usuario que creó la oportunidad
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // ---- Eligibility ----
  eligibleLevels    String[]
  eligibleCountries String[]

  // ---- Tagging ----
  tags           String[]
  requiredSkills String[]
  optionalSkills String[]

  // ---- Academic / Job ----
  fieldOfStudy  String?
  modality      String?
  language      String?
  fundingAmount Float?
  currency      String?

  salaryRange SalaryRange?

  // ---- Dates ----
  deadline  DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // ---- Scoring ----
  popularityScore Int @default(0)

  @@map("opportunities")
}

// -----------------------------------------------------
// OpportunityCache — per-user match caching
// -----------------------------------------------------
model OpportunityCache {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  userId        String
  opportunityId String
  score         Int
  tagsMatched   String[]

  createdAt DateTime @default(now())
  expiresAt DateTime

  @@map("opportunity_caches")
}

// -----------------------------------------------------
// User
// -----------------------------------------------------
model User {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  email         String        @unique
  emailVerified Boolean       @default(false)
  name          String
  image         String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  // Onboarding
  talentCategories    String[]
  onboardingCompleted Boolean  @default(false)
  
  // Relaciones
  opportunities Opportunity[]
  sessions      Session[]
  accounts      Account[]

  @@map("users")
}

// -----------------------------------------------------
// Session - Requerido por Better Auth
// -----------------------------------------------------
model Session {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// -----------------------------------------------------
// Account - Requerido por Better Auth (para OAuth)
// -----------------------------------------------------
model Account {
  id                    String    @id @default(auto()) @map("_id") @db.ObjectId
  accountId             String
  providerId            String
  userId                String    @db.ObjectId
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("accounts")
}

// -----------------------------------------------------
// Verification - Requerido por Better Auth
// -----------------------------------------------------
model Verification {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verifications")
}
