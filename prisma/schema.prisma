// -----------------------------------------------------
// MongoDB Datasource
// -----------------------------------------------------
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// -----------------------------------------------------
// Embedded Type: SalaryRange
// -----------------------------------------------------
type SalaryRange {
  min Float?
  max Float?
}

// -----------------------------------------------------
// Tag — master dictionary for semantic search
// -----------------------------------------------------
model Tag {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  synonyms  String[]
  category  String?
  createdAt DateTime @default(now())

  @@map("tags")
}

enum OpportunityType {
  INTERNSHIP
  SCHOLARSHIP
  EXCHANGE_PROGRAM
  EMPLOYMENT
  RESEARCH_FELLOWSHIP
  GRADUATE_PROGRAM
  FREELANCE
  FULL_TIME
  PART_TIME
  COMPETITION
  OTHER
}

// -----------------------------------------------------
// Opportunity — main resource
// -----------------------------------------------------
model Opportunity {
  id                  String          @id @default(auto()) @map("_id") @db.ObjectId
  type                OpportunityType @default(OTHER)
  title               String
  organization        String?
  organizationLogoUrl String?
  description         String?
  url                 String?
  language            String?         @default("EN") // ISO 639-1
  ubication           String? // Ciudad, País de la oportunidad
  fieldOfStudy        String? // Area

  // ---- Clasificación Estricta ----
  modality Modality          @default(ON_SITE)
  status   OpportunityStatus @default(ACTIVE) // Para no borrar, solo desactivar

  // ---- Campos de Matching Rápido ----
  eligibleLevels    String[] // ["JUNIOR", "MID"]
  eligibleCountries String[] // ["PE", "US"]
  requiredSkills    String[] // ["nextjs", "prisma"]
  optionalSkills    String[]

  // ---- Finanzas Denormalizadas ----
  minSalary Float?
  maxSalary Float?
  currency  String? @default("USD")

  // ---- Metadata de búsqueda ----
  searchVector    String? // Consolidado de title + description para IA
  popularityScore Int     @default(0)

  deadline  DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  User      User?     @relation(fields: [userId], references: [id])
  userId    String?   @db.ObjectId

  @@index([status, deadline])
  @@index([eligibleCountries])
  @@index([modality])
  @@map("opportunities")
}

model Skill {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  key       String   @unique
  createdAt DateTime @default(now())

  @@map("skills")
}

model Area {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  key       String   @unique
  createdAt DateTime @default(now())

  @@map("areas")
}

model Organization {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  key       String   @unique
  logoUrl   String?
  createdAt DateTime @default(now())

  @@map("organizations")
}

enum Modality {
  REMOTE
  HYBRID
  ON_SITE
}

enum OpportunityStatus {
  ACTIVE
  EXPIRED
  DRAFT
  DELETED
}

// -----------------------------------------------------
// OpportunityCache — per-user match caching
// -----------------------------------------------------
model OpportunityCache {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  userId        String
  opportunityId String
  score         Int
  tagsMatched   String[]

  createdAt DateTime @default(now())
  expiresAt DateTime

  @@map("opportunity_caches")
}

// -----------------------------------------------------
// User
// -----------------------------------------------------
model User {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  email         String        @unique
  emailVerified Boolean       @default(false)
  name          String
  image         String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  // Relaciones
  opportunities Opportunity[]
  sessions      Session[]
  accounts      Account[]

  @@map("users")
}

// -----------------------------------------------------
// Session - Requerido por Better Auth
// -----------------------------------------------------
model Session {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// -----------------------------------------------------
// Account - Requerido por Better Auth (para OAuth)
// -----------------------------------------------------
model Account {
  id                    String    @id @default(auto()) @map("_id") @db.ObjectId
  accountId             String
  providerId            String
  userId                String    @db.ObjectId
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("accounts")
}

// -----------------------------------------------------
// Verification - Requerido por Better Auth
// -----------------------------------------------------
model Verification {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verifications")
}
