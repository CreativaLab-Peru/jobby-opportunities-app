### Match opportunities for a CV
POST http://localhost:3000/api/match/users/123/cvs/456
Content-Type: application/json

{
  "cv_data": {
    "summary": "Software Engineer with experience in backend development and APIs",
    "experience_text": "3 years working with Node.js, Next.js, Prisma and PostgreSQL.",
    "skills": ["Node.js", "Next.js", "Prisma", "PostgreSQL", "TypeScript"],
    "location": "Peru",
    "level": "Mid",
    "languages": ["Spanish", "English"]
  },
  "preferences": {
    "modality": "Remote",
    "min_salary": 3000,
    "currency": "USD",
    "top_k": 5
  },
  "filters": {
    "exclude_expired": true
  }
}


